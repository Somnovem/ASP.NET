@model Practice_20.ViewModels.RegisterModel;
@{
	ViewData["Title"] = "Authorisation";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true">

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Sign Up</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="username" asp-for="Email" class="form-control" placeholder="Enter your email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Enter your password" required>
                        </div>
                        <div class="form-group">
                            <label for="regBirthday">Birthday</label>
                            <input type="date" id="regBirthday" asp-for="Birthday" class="form-control" placeholder="Enter your birthday" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Already have an account? <a asp-area="" asp-controller="Account" asp-action="Login">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1;
    var yyyy = today.getFullYear() - 21;
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }
    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById('regBirthday').value = today;
</script>