@page "{username}"
@model Task_1.Pages.EditModel
@{
	ViewData["Title"] = "Edit account";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Edit Client Info</h2>
            <form id="editForm" asp-page-handler="Edit">
                <input type="number" id="userId" name="userId" style="display:none" value="@Model.CurrentUser.Id">
                <div class="form-group">
                    <label for="username">New Username</label>
                    <input type="text" class="form-control" id="newUsername" name="newUsername" required value="@Model.CurrentUser.Username">
                </div>
                <div class="form-group">
                    <label for="password">Old Password</label>
                    <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                </div>
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                </div>
                <div class="form-group">
                    <label for="birthdate">Birthdate</label>
                    <input type="date" class="form-control" id="birthdate" name="birthdate" required value="@String.Format("{0:yyyy-MM-dd}",Model.CurrentUser.BirthDate)">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

